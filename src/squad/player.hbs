<div id="{{id}}" class="player transitionEnabled"
     style=' height:100px;
             width:100px;
             position:absolute;
             left:{{positionX}}px;
             top:{{positionY}}px;'>


    <div class="bodyContainer">
        <div class="shirt" id="{{id}}"
             style='background-image: url("../../src/faces/img/shirt.png"); {{definition.avatar.shirtColor}}'></div>
        <div class="body" id="{{id}}"
             style='background-image: url("../../src/faces/img/body.png"); {{definition.avatar.bodyColor}}'></div>
        <div class="shorts" id="{{id}}"
             style='background-image: url("../../src/faces/img/shorts.png"); {{definition.avatar.shortsColor}}'></div>
        <div class="boots" id="{{id}}" style='background-image: url("../../src/faces/img/boots.png");'></div>
    </div>
    <div class="faceContainer">
        <img class="head" id="{{id}}" src="../../src/faces/img/head.png"
             style="left:{{definition.avatar.headSpriteOffset}}px; {{definition.avatar.bodyColor}}"></img>
        <img class="eyes" id="{{id}}" src="../../src/faces/img/eyes.png"
             style="left:{{definition.avatar.eyesSpriteOffset}}px"></img>
        <img class="eyebrows" id="{{id}}" src="../../src/faces/img/eyebrows.png"
             style="left:{{definition.avatar.eyebrowsSpriteOffset}}px; {{definition.avatar.eyebrowsColor}}"></img>
        <img class="mouth" id="{{id}}" src="../../src/faces/img/mouth.png"
             style="left:{{definition.avatar.mouthSpriteOffset}}px"></img>
        <img class="moustache" id="{{id}}" src="../../src/faces/img/moustache.png"
             style="left:{{definition.avatar.moustacheSpriteOffset}}px; {{definition.avatar.moustacheColor}}"></img>
        <img class="hair" id="{{id}}" src="../../src/faces/img/hair.png"
             style="left:{{definition.avatar.hairSpriteOffset}}px; {{definition.avatar.hairColor}}"></img>
    </div>

    <div class="name">{{definition.name}}</div>
    <div class="decision" style="color:black; background-color:white;"></div>
    <div class="id" hidden>{{id}}</div>
</div>

