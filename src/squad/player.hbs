<div id="{{id}}" class="player"
     style=' height:100px;
             width:100px;
             position:absolute;
             left:{{positionX}}px;
             top:{{positionY}}px;'>


    <div class="bodyContainer">
        <img class="shirt" id="{{id}}" src="../../src/faces/img/shirt.png" style="{{definition.face.shirtColor}}"></img>
        <img class="body" id="{{id}}" src="../../src/faces/img/body.png"  style="{{definition.face.bodyColor}}"></img>
        <img class="shorts" id="{{id}}" src="../../src/faces/img/shorts.png" style="{{definition.face.shortsColor}}"></img>
    </div>
    <div class="faceContainer">
        <img class="head" id="{{id}}" src="../../src/faces/img/head.png" style="left:{{definition.face.headSpriteOffset}}px; {{definition.face.bodyColor}}"></img>
        <img class="eyes" id="{{id}}" src="../../src/faces/img/eyes.png"  style="left:{{definition.face.eyesSpriteOffset}}px"></img>
        <img class="eyebrows" id="{{id}}" src="../../src/faces/img/eyebrows.png" style="left:{{definition.face.eyebrowsSpriteOffset}}px; {{definition.face.eyebrowsColor}}"></img>
        <img class="mouth" id="{{id}}" src="../../src/faces/img/mouth.png" style="left:{{definition.face.mouthSpriteOffset}}px"></img>
        <img class="moustache" id="{{id}}" src="../../src/faces/img/moustache.png" style="left:{{definition.face.moustacheSpriteOffset}}px; {{definition.face.moustacheColor}}"></img>
        <img class="hair" id="{{id}}" src="../../src/faces/img/hair.png" style="left:{{definition.face.hairSpriteOffset}}px; {{definition.face.hairColor}}"></img>
    </div>

    <div class="name">{{definition.name}}</div>
    <div class="decision" style="color:black; background-color:white;"></div>
    <div class="id" hidden>{{id}}</div>
</div>

